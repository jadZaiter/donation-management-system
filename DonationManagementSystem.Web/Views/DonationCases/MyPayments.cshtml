@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@using DonationManagementSystem.Domain.Entities

@model List<DonationManagementSystem.Domain.Entities.Payment>

<h2>My Payments</h2>

@if (!Model.Any())
{
    <p>No payments yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Case</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Proof</th>
                <th>Created</th>
                <th>Reviewed</th>
                <th>Admin Note</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var p in Model)
            {
                // Status badge
                var badge = p.Status switch
                {
                    PaymentStatus.Pending => "bg-secondary",
                    PaymentStatus.ProofUploaded => "bg-warning text-dark",
                    PaymentStatus.Approved => "bg-success",
                    PaymentStatus.Rejected => "bg-danger",
                    _ => "bg-secondary"
                };

                // Reviewed info
                string reviewerName = "—";
                if (!string.IsNullOrWhiteSpace(p.ReviewedByUserId))
                {
                    var reviewer = await UserManager.FindByIdAsync(p.ReviewedByUserId);
                    var reviewerEmail = reviewer?.Email;

                    if (!string.IsNullOrWhiteSpace(reviewerEmail))
                        reviewerName = reviewerEmail.Contains("@") ? reviewerEmail.Split('@')[0] : reviewerEmail;
                    else
                        reviewerName = "Admin";
                }

                var reviewedText = p.ReviewedAt.HasValue
                ? $"{reviewerName} • {p.ReviewedAt.Value:yyyy-MM-dd HH:mm}"
                : "Not reviewed yet";

                <tr>
                    <td>@(p.DonationCase?.Title ?? "—")</td>
                    <td>@p.Amount</td>

                    <td>
                        <span class="badge @badge">@p.Status</span>
                    </td>

                    <td>
                        @if (!string.IsNullOrEmpty(p.ProofPath))
                        {
                            <a href="@p.ProofPath" target="_blank">View</a>
                        }
                        else
                        {
                            <span class="text-muted">No proof</span>
                        }
                    </td>

                    <td>@p.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@reviewedText</td>
                    <td>@(string.IsNullOrWhiteSpace(p.AdminNote) ? "—" : p.AdminNote)</td>
                </tr>
            }
        </tbody>
    </table>
}
