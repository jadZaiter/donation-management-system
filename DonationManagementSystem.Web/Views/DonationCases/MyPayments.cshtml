@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@using DonationManagementSystem.Domain.Entities


@model List<DonationManagementSystem.Domain.Entities.Payment>

<h2>My Payments</h2>

@if (!Model.Any())
{
    <p>No payments yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Case</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Proof</th>
                <th>Created</th>
                <th>User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                var user = await UserManager.FindByIdAsync(p.UserId);
                var email = user?.Email ?? "anonymous";
                var username = email.Contains("@") ? email.Split('@')[0] : email;

                <tr>
                    <td>@p.DonationCase?.Title</td>
                    <td>@p.Amount</td>
                    @{
                        var badge = p.Status switch
                        {
                            PaymentStatus.Pending => "bg-secondary",
                            PaymentStatus.ProofUploaded => "bg-warning text-dark",
                            PaymentStatus.Approved => "bg-success",
                            PaymentStatus.Rejected => "bg-danger",
                            _ => "bg-secondary"
                        };
                    }
                    <td>
                        <span class="badge @badge">@p.Status</span>
                    </td>
                    <td>@username</td>
                    <td>
                        @if (!string.IsNullOrEmpty(p.ProofPath))
                        {
                            <a href="@p.ProofPath" target="_blank">View</a>
                        }
                        else
                        {
                            <span class="text-muted">No proof</span>
                        }
                    </td>
                    <td>@p.CreatedAt</td>
                </tr>
            }

        </tbody>
    </table>
}
